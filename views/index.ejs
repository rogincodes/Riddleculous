<%- include("partials/header.ejs") %>

	<div class="container">
		<div class="card">
			<% if (locals.name) { %>
				<h1 class="header"><%= name %>, are you prepared for a ruthless insult? Because that's what awaits if you get it wrong.</h1>
				<div>
					<a href="riddle.ejs"><button class="buttons">YES</button></a>
					&emsp; &ensp;
					<a href="goodbye.ejs"><button class="buttons">NO</button></a>
				</div>
			<% } else { %>
				<h1 class="header">It's riddle time!</h1>
				<form action="/submitName" method="post">
					<label for="name" class="labels">Enter your name:</label><br>
					<input type="text" name="name" class="inputs"><br>
					<input type="submit" value="SUBMIT" class="submit">
				</form>
				<br>
			<% } %>
		</div>
	</div>

